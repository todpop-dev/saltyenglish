<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <!-- title bar -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/common_bgimg_purchase" />

            <!-- back btn -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.5dp"
                android:background="@drawable/rg_drawable_btn_back"
                android:onClick="onClickBack" />
        </RelativeLayout>

        <!-- carousel -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="665"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <LinearLayout
                android:id="@+id/activity_home_my_page_purchased_detail_upper_pink_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="26dp"
                android:background="@drawable/common_image_pinkbox_small"
                android:orientation="vertical"
                android:padding="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="90" >

                    <TextView
                        android:id="@+id/home_my_page_purchased_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#ECF1CA"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="500"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="260"
                        android:paddingLeft="28dp"
                        android:paddingRight="25dp" >

                        <TextView
                            android:id="@+id/home_my_page_purchased_detail_validate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="right|center_vertical"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/home_my_page_purchased_detail_line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/store_35_image_whiteline" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/home_my_page_purchased_detail_line1"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/store_35_bgimg_date" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/home_my_page_purchased_detail_line1"
                            android:layout_alignLeft="@id/home_my_page_purchased_detail_line1"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/store_35_bgimg_change" />

                        <TextView
                            android:id="@+id/home_my_page_purchased_detail_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/home_my_page_purchased_detail_line1"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="right|center_vertical"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/home_my_page_purchased_detail_line2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/home_my_page_purchased_detail_line1"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/store_35_image_whiteline" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/home_my_page_purchased_detail_line2"
                            android:layout_alignLeft="@id/home_my_page_purchased_detail_line1"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/store_35_bgimg_productname" />

                        <TextView
                            android:id="@+id/home_my_page_purchased_detail_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/home_my_page_purchased_detail_line2"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="right|center_vertical"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/home_my_page_purchased_detail_line1"
                            android:paddingLeft="18dp" >

                            <ImageView
                                android:id="@+id/home_my_page_purchased_detail_product_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:scaleType="centerInside" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="180"
                        android:paddingBottom="15dp" >

                        <ImageView
                            android:id="@+id/home_my_page_purchased_detail_barcode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/activity_home_my_page_purchased_detail_upper_pink_box"
                android:layout_alignTop="@id/activity_home_my_page_purchased_detail_upper_pink_box"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-7dp"
                android:src="@drawable/store_35_image_monkey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="525"
            android:paddingBottom="17dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="19dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/common_image_opacitytextbox"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/home_my_page_purchased_detail_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/home_my_page_purchased_detail_expalin"
                    android:textColor="#12323C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_my_page_purchased_detail_explain"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/store_32_drop_scroll"
                    android:scrollbarTrackVertical="@drawable/store_32_drop_underbar"  >

                    <TextView
                        android:id="@+id/home_my_page_purchased_detail_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#12323C" />
                </ScrollView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
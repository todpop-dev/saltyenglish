<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rgregisteremailinfo_id_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_darkyellowpattern" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/common_bgimg_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="149" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="187" >

            <ImageView
                android:id="@+id/register_25_bgimg_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:src="@drawable/register_25_bgimg_birthdate" />

            <Button
                android:id="@+id/rgregisteremailinfo_id_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_25_bgimg_birthdate"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/register_25_drop_date"
                android:onClick="setBirthdate"
                android:text="년 / 월 / 일"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="151" >

            <ImageView
                android:id="@+id/register_25_bgimg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:src="@drawable/register_25_bgimg_gender" />

            <RadioGroup
                android:id="@+id/rgregisteremailinfo_id_sexgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_25_bgimg_gender"
                android:layout_marginLeft="44dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rgregisteremailinfo_id_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_25_btn_man_on"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_sex_male"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rgregisteremailinfo_id_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/register_25_btn_woman_on"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_sex_female" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="185"
            android:paddingBottom="15dp" >

            <ImageView
                android:id="@+id/register_25_bgimg_havitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:src="@drawable/register_25_bgimg_havitat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_25_bgimg_havitat"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:paddingLeft="20.5dp"
                android:paddingRight="20.5dp" >

                <Spinner
                    android:id="@+id/rgregisteremailinfo_id_spinner_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="302"
                    android:background="@drawable/register_25_drop_city"
                    android:gravity="center"
                    android:paddingLeft="30dp" />

                <Spinner
                    android:id="@+id/rgregisteremailinfo_id_spinner_contry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="376"
                    android:background="@drawable/register_25_drop_town"
                    android:gravity="center"
                    android:paddingLeft="30dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="428" >

            <ImageView
                android:id="@+id/register_25_bgimg_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:src="@drawable/register_25_bgimg_interest" />

            <ImageView
                android:id="@+id/register_25_bgimg_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/register_25_bgimg_interest"
                android:layout_below="@id/register_25_bgimg_interest"
                android:paddingLeft="14.5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/register_25_bgimg_select" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_25_bgimg_select"
                android:layout_centerHorizontal="true"
                android:columnCount="4"
                android:paddingTop="11.5dp"
                android:rowCount="3" >

                <CheckBox
                    android:id="@+id/sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_sports" />

                <CheckBox
                    android:id="@+id/love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_love" />

                <CheckBox
                    android:id="@+id/electronic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_electronic" />

                <CheckBox
                    android:id="@+id/music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_music" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_sports" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_love" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_electronic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_music" />

                <CheckBox
                    android:id="@+id/fashion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_fashion" />

                <CheckBox
                    android:id="@+id/game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_game" />

                <CheckBox
                    android:id="@+id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_food" />

                <CheckBox
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_language" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_fashion" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_game" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_food" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_language" />

                <CheckBox
                    android:id="@+id/travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_travel" />

                <CheckBox
                    android:id="@+id/movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_movie" />

                <CheckBox
                    android:id="@+id/haircut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_haircut" />

                <CheckBox
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_25_btn_music_off"
                    android:button="@drawable/rgregisteremailinfo_drawable_checkbox_money" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_travel" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_movie" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_haircut" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/register_25_text_money" />
            </GridLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180" >

            <Button
                android:id="@+id/rgregisteremailinfo_id_donebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rgregisteremailinfo_drawable_btn_next"
                android:onClick="showRgRegisterFinishActivity" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
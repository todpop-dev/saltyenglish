<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weekly_1_bg_blue"
    android:orientation="vertical" >

    <View
        android:id="@+id/study_testweekly_id_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ff0000"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/weekly_1_text_weeklytitle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="650" >

            <ImageView
                android:id="@+id/study_testweekly_id_img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/weekly_1_text_time_5"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/study_testweekly_id_img_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:src="@drawable/weekly_1_img_bestscore" />

            <ProgressBar
                android:id="@+id/study_testweekly_id_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/weekly_shape_ring_back"
                android:indeterminate="false"
                android:max="4000"
                android:progress="0"
                android:progressDrawable="@drawable/weekly_shape_ring" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/study_testweekly_id_img_best"
                android:layout_alignLeft="@id/study_testweekly_id_img_best"
                android:layout_alignTop="@id/study_testweekly_id_img_best"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="135" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="116"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/study_testweekly_id_text_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FEEEC3"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ì "
                        android:textColor="#FEEEC3"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/study_testweekly_id_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/weekly_1_img_o"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/study_testweekly_id_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/weekly_1_img_x"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/study_testweekly_id_english"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="18dp"
                android:textColor="#FEEEC3"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="#FEEEC3"
                android:textSize="8dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="20"
                android:textColor="#FEEEC3"
                android:textSize="8dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/study_testweekly_id_combo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:layout_marginTop="77dp"
                android:src="@drawable/weekly_1_img_combo"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/weekly_1_img_cloud" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="540"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/study_testweekly_id_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/studytest_drawable_btn_select"
                android:gravity="center"
                android:textColor="#235F69"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/study_testweekly_id_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/studytest_drawable_btn_select"
                android:gravity="center"
                android:textColor="#235F69"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/study_testweekly_id_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/studytest_drawable_btn_select"
                android:gravity="center"
                android:textColor="#235F69"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/study_testweekly_id_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/studytest_drawable_btn_select"
                android:gravity="center"
                android:textColor="#235F69"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/study_testweekly_id_tuto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f000000"
        android:clickable="true"
        android:padding="16dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/weekly_tutorial_img_all" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/weekly_btn_tutorial_confirm"
            android:onClick="onClickTuto" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/study_testweekly_id_timeup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f000000"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="vertical" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="338" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="942" >

            <ImageView
                android:id="@+id/study_testweekly_id_img_timeup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/weekly_1_img_timesup" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
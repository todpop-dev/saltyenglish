<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_bluepattern" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/common_bgimg_resultcheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1190" >

            <ImageView
                android:id="@+id/lvtest_10_image_blackman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lvtest_10_image_blackman"
                android:visibility="invisible" />

            <Button
                android:id="@+id/lvtestresult_drawable_continue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:background="@drawable/lvtestresult_drawable_continue_btn"
                android:onClick="showHomeActivity" />

            <ImageView
                android:id="@+id/lvtest_10_text_myword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/lvtestresult_drawable_continue_btn"
                android:layout_marginBottom="24.5dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/lvtest_10_text_myword" />

            <RelativeLayout
                android:id="@+id/lvtest_10_image_resultbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/lvtest_10_text_myword"
                android:layout_below="@id/lvtest_10_image_blackman"
                android:layout_marginTop="-19dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/lvtest_10_image_resultbox"
                android:padding="15dp" >

                <ListView
                    android:id="@+id/lvtestresult_id_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/lvtest_10_drop_scroll"
                    android:scrollbarTrackVertical="@drawable/lvtest_10_drop_underbar" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lvtest_10_image_blackman" />

            <TextView
                android:id="@+id/lvtest_result_id_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@id/lvtest_10_image_resultbox"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Testing"
                android:textColor="#fffff0"
                android:textSize="19sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
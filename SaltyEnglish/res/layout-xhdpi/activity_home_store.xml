<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_darkyellowpattern" >

     <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="640dp"
        android:layout_centerInParent="true" >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12.5dp"
        android:background="@drawable/common_bgimg_store" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="10.5dp"
        android:background="@drawable/rg_drawable_btn_back"
        android:onClick="onClickBack" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/store_2_image_carouselbar"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/homestore_id_sexgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/homestore_id_btn_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_education"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/homestore_id_btn_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_food" />

                <RadioButton
                    android:id="@+id/homestore_id_btn_cafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_cafe" />

                <RadioButton
                    android:id="@+id/homestore_id_btn_convenient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_convenient" />

                <RadioButton
                    android:id="@+id/homestore_id_btn_beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_beauty" />

                <RadioButton
                    android:id="@+id/homestore_id_btn_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/store_2_btn_carousel_education_off"
                    android:button="@drawable/homestore_drawable_btn_refund" />
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ducation   food  cafe  convenient  view -->

    <RelativeLayout
        android:id="@+id/home_store_id_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp"
        android:focusableInTouchMode="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/store_2_image_searchboxbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/common_image_bigcoin" />

        <TextView
            android:id="@+id/home_store_curReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/store_2_textbox_money"
            android:gravity="center"
            android:textColor="#000000" />

        <EditText
            android:layout_width="215dp"
            android:layout_height="31.5dp"
            android:layout_marginLeft="87.5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/store_2_image_searchbox"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:singleLine="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="311dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/homestore_drawable_btn_search" />

        <ListView
            android:id="@+id/homestore_id_listiew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45.5dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@drawable/store_2_drop_scroll"
            android:scrollbarTrackVertical="@drawable/store_2_drop_underbar" >
        </ListView>
    </RelativeLayout>

    <!-- refund view -->

    <ScrollView
        android:id="@+id/home_store_id_refund_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="14.5dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/store_6_image_wholeyellowbox"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/store_6_bgimg_savingperson" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/store_6_bgimg_bank" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/store_6_bgimg_account" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/store_6_bgimg_price" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/store_6_bgimg_password" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/store_6_bgimg_balance"
                android:focusable="false"
                android:singleLine="true" />

            <EditText
                android:id="@+id/home_store_refund_name"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/common_image_textbox"
                android:hint="이름을 입력해주세요"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/home_store_refund_bank"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/common_image_pinktrianglebox"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/home_store_refund_account"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="145dp"
                android:background="@drawable/common_image_textbox"
                android:hint="-를 제외하고 입력해주세요"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/home_store_refund_amount"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="205dp"
                android:background="@drawable/common_image_textbox"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:prompt="@string/home_store_refund_amount"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/home_store_refund_password"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="265dp"
                android:background="@drawable/common_image_textbox"
                android:hint="짭짤한영어 비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_store_refund_curReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="345dp"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/store_6_image_savingman" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="293dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/store_6_image_pricewoman" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="350dp"
                android:src="@drawable/common_image_bigcoin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="348dp"
                android:src="@drawable/store_6_bgimg_won" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="390dp"
                android:background="@drawable/common_image_opacitytextbox" />

            <TextView
                android:id="@+id/home_store_refund_notice"
                android:layout_width="259.5dp"
                android:layout_height="252dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="399dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="690dp"
                android:background="@drawable/homestore_drawable_refund_btn_ok" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="690dp"
                android:background="@drawable/homestore_drawable_refund_btn_cancel" />
        </RelativeLayout>
    </ScrollView>



     </RelativeLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.5dp"
                android:background="@drawable/rg_drawable_btn_back"
                android:onClick="onClickBack" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/common_bgimg_more" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1190" >

            <!-- acount info -->

            <Button
                android:id="@+id/homemore_id_accountinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/homemore_drawable_btn_accountinfo"
                android:onClick="showAccountInfoActivity" />
            <!-- summary -->

            <Button
                android:id="@+id/homemore_id_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/homemore_id_accountinfo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/homemore_drawable_btn_notice"
                android:onClick="showNoticeActivity" />
            <!-- settings -->

            <Button
                android:id="@+id/homemore_id_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/homemore_id_notice"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/homemore_drawable_btn_setting"
                android:onClick="showSettingActivity" />
            <!-- help -->

            <Button
                android:id="@+id/homemore_id_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homemore_id_accountinfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/homemore_drawable_btn_help"
                android:onClick="showHelpActivity" />
            <!-- manage pronounce -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homemore_id_help"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/homemore_drawable_btn_help"
                android:onClick="showPronounceActivity" 
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/homemore_id_setting"
                android:layout_marginBottom="-20dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/store_51_image_settingwoman" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/homemore_id_accountinfo"
                android:layout_alignRight="@id/homemore_id_accountinfo"
                android:layout_marginBottom="-20dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/store_51_image_accountcouple" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
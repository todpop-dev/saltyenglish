<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_pop"
    android:padding="20dp" >

    <TextView
        android:id="@+id/popupviewhomeacountinfo_id_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="알림!"
        android:textColor="#CC0033"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/popup_id_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popupviewhomeacountinfo_id_notice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_id_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/popup_view_home_more_acount_submit"
            android:onClick="confirmPopup" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/popup_view_home_more_acount_cancel"
            android:onClick="closePopup" />
    </LinearLayout>

</RelativeLayout>
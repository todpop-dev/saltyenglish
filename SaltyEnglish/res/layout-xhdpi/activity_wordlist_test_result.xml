<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weekly_2_bg_bluecloud" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="213" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/weekly_2_img_character" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wordlisttestresult_result_id_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textColor="#FEEEC3"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="문제 중 "
                    android:textColor="#FEEEC3"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wordlisttestresult_result_id_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textColor="#F6E487"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="문제 "
                    android:textColor="#F6E487"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="맞았어요!"
                    android:textColor="#FEEEC3"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="902"
            android:paddingLeft="7.5dp"
            android:paddingRight="6.5dp" >

            <RelativeLayout
                android:id="@+id/wordlisttestresult_10_image_resultbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/weekly_2_img_box"
                android:padding="6dp" >

                <ListView
                    android:id="@+id/wordlisttestresult_id_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/lvtest_10_drop_scroll"
                    android:scrollbarTrackVertical="@drawable/lvtest_10_drop_underbar" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="165" >

            <ImageView
                android:id="@+id/wordlisttestresult_10_text_myword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24.5dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/lvtest_10_text_myword" />

            <Button
                android:id="@+id/wordlisttestresult_drawable_continue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/lvtestresult_drawable_continue_btn"
                android:onClick="continueActivity" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
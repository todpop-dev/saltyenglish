<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_more_account_changepw_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/common_bgimg_accountinfo" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.5dp"
                android:background="@drawable/rg_drawable_btn_back"
                android:onClick="onClickBack" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="690" >

            <EditText
                android:id="@+id/home_more_account_change_pw_newcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/store_64_image_pinktextbox"
                android:hint="한번더 변경할 패스워드를 입력해주세요"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/home_more_account_change_pw_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/home_more_account_change_pw_newcheck"
                android:layout_centerHorizontal="true"
                android:background="@drawable/store_64_image_pinktextbox"
                android:hint="변경할 패스워드를 입력해주세요"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/home_more_account_change_pw_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/home_more_account_change_pw_new"
                android:layout_alignLeft="@id/home_more_account_change_pw_new"
                android:layout_marginLeft="25dp"
                android:src="@drawable/store_64_bgimg_changepw" />

            <EditText
                android:id="@+id/home_more_account_change_pw_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/home_more_account_change_pw_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/store_64_image_pinktextbox"
                android:hint="패스워드를 입력해주세요"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/home_more_account_change_pw_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/home_more_account_change_pw_current"
                android:layout_alignLeft="@id/home_more_account_change_pw_new"
                android:layout_marginBottom="-18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/store_59_image_pwman" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/home_more_account_change_pw_current"
                android:layout_toRightOf="@+id/home_more_account_change_pw_man"
                android:layout_marginLeft="5dp"
                android:src="@drawable/store_64_bgimg_pw" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="500" >

            <!-- change PW  btn -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/homemoreacountchangepw_drawable_btn_change"
                android:onClick="changePw" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
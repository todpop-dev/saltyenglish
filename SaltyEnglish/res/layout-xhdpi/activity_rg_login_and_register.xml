<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_3_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="770" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="510" >

        <Button
            android:id="@+id/rgloginandregister_id_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rgloginandregister_drawable_btn_register"
            android:onClick="showRgRegisterActivity" />

        <Button
            android:id="@+id/rgloginandregister_id_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgloginandregister_id_register_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/rgloginandregister_drawable_btn_login"
            android:onClick="showRgLoginActivity" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lv_test_english"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="222"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lv_test_kr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="266"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/lv_test_check_correct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="40" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="138" >

        <CheckBox
            android:id="@+id/lv_test_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/weekly_2_btn_pencil_off"
            android:button="@drawable/lvtest_saving_word_btn" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
     >
    
    <TextView 
        android:id="@+id/lv_test_english"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_gravity="center"
       /> 
        
    <TextView 
        android:id="@+id/lv_test_kr"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
        
    <ImageView 
        android:id="@+id/lv_test_check_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    
    <CheckBox
        android:id="@+id/lv_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:background="@drawable/lvtest_10_btn_pencil_off"
        android:button="@drawable/lvtest_saving_word_btn"
        />
</GridLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_pop"
    android:padding="20dp" >

    <TextView
        android:id="@+id/popup_store_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="결제 내용 확인"
        android:textColor="#D9534A"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/popup_store_id_info"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_store_id_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="결제금액"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/popup_store_id_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7.5dp"
            android:layout_toLeftOf="@id/popup_store_id_price"
            android:src="@drawable/common_image_smallcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_store_id_price"
            android:layout_marginTop="3dp"
            android:gravity="left|center_vertical"
            android:text="닉네임"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/popup_store_id_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/popup_store_id_price"
            android:layout_marginTop="3dp"
            android:gravity="right|center_vertical"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_store_id_nick"
            android:layout_marginTop="7dp"
            android:gravity="left|center_vertical"
            android:text="*결제 후 환불이 불가합니다"
            android:textColor="#000000"
            android:textSize="12dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/popup_store_id_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_store_id_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/store_10_image_pwyellowbox"
        android:hint="짭짤한영어 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_store_id_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/popup_store_id_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/popup_view_home_more_acount_cancel"
            android:onClick="closePopup" />

        <Button
            android:id="@+id/popup_store_id_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/popup_view_home_more_acount_submit"
            android:onClick="confirmPurchase" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/popup_store_id_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:visibility="gone"/>

</RelativeLayout>
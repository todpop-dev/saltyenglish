<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_result_id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_bluepattern" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/common_bgimg_resultcheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1190" >

            <ImageView
                android:id="@+id/test_result_10_image_blackman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lvtest_10_image_blackman"
                android:visibility="invisible" />

            <Button
                android:id="@+id/test_result_drawable_home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:background="@drawable/lvtestresult_drawable_home_btn"
                android:onClick="showHomeActivity" />

            <Button
                android:id="@+id/test_result_drawable_continue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/test_result_drawable_home_btn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lvtestresult_drawable_continue_btn"
                android:onClick="showStudyLearnActivity" />

            <ImageView
                android:id="@+id/test_result_10_text_myword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/test_result_drawable_continue_btn"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/lvtest_10_text_myword" />

            <RelativeLayout
                android:id="@+id/test_result_10_image_resultbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/test_result_10_text_myword"
                android:layout_below="@id/test_result_10_image_blackman"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="-19dp"
                android:background="@drawable/lvtest_10_image_resultbox"
                android:padding="15dp" >

                <ListView
                    android:id="@+id/lvtestresult_id_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/lvtest_10_drop_scroll"
                    android:scrollbarTrackVertical="@drawable/lvtest_10_drop_underbar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lvtest_result_id_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@id/test_result_10_image_resultbox"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/test_result_speechbubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/test_result_10_image_blackman"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/test_23_image_speechbubble" />

            <TextView
                android:id="@+id/study_test_result_id_score_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/test_result_speechbubble"
                android:layout_alignRight="@id/test_result_speechbubble"
                android:layout_alignTop="@id/test_result_speechbubble"
                android:layout_alignBottom="@id/test_result_speechbubble"
                android:paddingRight="12dp"
                android:paddingTop="11dp"
                android:gravity="right|center_vertical"
                android:textColor="#000000"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lvtest_10_image_blackman" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_bluepattern" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" >

            <!-- Title Image -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/common_bgimg_test" />

            <!-- Top Right On Pause Button -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/studytesta_drawable_btn_onpause"
                android:onClick="pauseTestCB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1190"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <!-- Sky background image -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_9_bgimg_skypicture"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp" >

                <!-- Test Count Image -->

                <ImageView
                    android:id="@+id/study_testb_id_pagenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/test_9_image_number_1" />

                <!-- word indicator -->

                <ImageView
                    android:id="@+id/study_testb_id_bottom_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/test_9_image_sign" />

                <!-- Test words inside indicator -->

                <TextView
                    android:id="@+id/study_testb_id_enword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/study_testb_id_bottom_indicator"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/test_9_textbox_englishword"
                    android:gravity="center_horizontal"
                    android:textSize="30sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/study_testb_id_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="35dp" />

    <Button
        android:id="@+id/study_testb_id_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp" />

    <Button
        android:id="@+id/study_testb_id_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp" />

    <Button
        android:id="@+id/study_testb_id_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp" />

    <ImageButton
        android:id="@+id/study_test_b_id_intro_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test_2_image_tutorial1"
        android:onClick="introClickCB" />

    <RelativeLayout
        android:id="@+id/study_test_b_id_pause_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test_19_bg_fisherman" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/common_bgimg_test" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="475" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="715" >

                <Button
                    android:id="@+id/study_test_b_id_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/lvtestpuse_btn_continue"
                    android:onClick="pauseViewContinueTest" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/study_test_b_id_continue"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/lvtestpuse_btn_testfinish"
                    android:onClick="pauseViewFinishTest" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50" />

    <ImageView
        android:id="@+id/home_store_list_item_id_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_weight="105"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="305"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/home_store_list_item_id_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/home_store_list_item_id_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="10dp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35" />

    <TextView
        android:id="@+id/home_store_list_item_id_coins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="110"
        android:drawableLeft="@drawable/common_image_smallcoin"
        android:drawablePadding="3dp"
        android:gravity="left|center_vertical"
        android:textColor="#000000"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:src="@drawable/store_2_image_pinkarrow" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65" />

</LinearLayout>
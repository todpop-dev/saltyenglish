<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern"
    android:id="@+id/home_more_account_delete_main">

     <RelativeLayout
         android:layout_width="360dp"
         android:layout_height="640dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true" >

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="12.5dp"
             android:src="@drawable/common_bgimg_accountinfo" />

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10.5dp"
             android:layout_marginTop="10.5dp"
             android:background="@drawable/rg_drawable_btn_back"
             android:onClick="onClickBack" />

         <EditText
             android:id="@+id/home_more_account_delete_input_pw"
             android:layout_width="335dp"
             android:layout_height="60dp"
             android:layout_centerInParent="true"
             android:layout_marginTop="180dp"
             android:background="@drawable/store_64_image_pinktextbox"
             android:hint="패스워드를 입력해주세요"
             android:inputType="textPassword"
             android:paddingLeft="40dp"
             android:paddingRight="20dp"
             android:singleLine="true"
             android:textSize="15sp" >

             <requestFocus />
         </EditText>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="250dp"
             android:src="@drawable/store_59_image_pwman" />

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="360dp"
             android:background="@drawable/homestore_drawable_refund_btn_cancel"
             android:onClick="onClickBack" />

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="200dp"
             android:layout_marginTop="360dp"
             android:background="@drawable/homestore_drawable_refund_btn_ok"
             android:onClick="deleteAccount" />
     </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_id_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background = "@drawable/common_pop_big"
     >
     
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16.66dp"
        android:textStyle="bold"
        android:text="@string/study_home_popup_notice"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    
    <TextView 
        android:id="@+id/popup_notice_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:textColor="#000000"
        />
        
        
        
    <Button 
        android:id="@+id/popup_notice_id_btn"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:onClick="closePopup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8.33dp"
        android:background="@drawable/popupview_drawable_btn"
        android:layout_below="@id/popup_notice_id_text"
        />
    

</RelativeLayout>

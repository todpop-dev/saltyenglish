<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background = "@drawable/common_pop_medium"
     >
     
   
     
    
    <TextView 
        android:id="@+id/popup_id_text"
        android:layout_width="204.44dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="41.64dp"
        android:textSize="16sp"
        android:textColor="#000000"
        />
        
        
    
    
    <Button 
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:onClick="closePopup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91.61dp"
        android:background="@drawable/popupview_drawable_btn"
        
        />
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/home_mypage_purchased_list_item_id_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.89dp" />

    <TextView
        android:id="@+id/home_mypage_purchased_list_item_id_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17.78dp"
        android:layout_marginTop="2.5dp"
        android:layout_toRightOf="@id/home_mypage_purchased_list_item_id_item"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/home_mypage_purchased_list_item_id_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17.78dp"
        android:layout_toRightOf="@id/home_mypage_purchased_list_item_id_item"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/home_mypage_purchased_list_item_id_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="17.78dp"
        android:layout_toRightOf="@id/home_mypage_purchased_list_item_id_item"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/home_mypage_purchased_list_item_id_coin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="227.11dp"
        android:src="@drawable/common_image_smallcoin" />

    <TextView
        android:id="@+id/home_mypage_purchased_list_item_id_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="241.33dp"
        android:gravity="left"
        android:text="3,000"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>
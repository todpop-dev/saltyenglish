<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/study_category_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_2_bg_yellow" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38.67dp" >

        <RelativeLayout
            android:id="@+id/rl_mocktest_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16.67dp"
            android:background="@drawable/test_2_img_imgbox" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/test_2_img_cpd" />
        </RelativeLayout>

        <Button
            android:layout_below="@id/rl_mocktest_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33.33dp"
            android:onClick="startMockTest"
            android:background="@drawable/mocktest_drawable_btn_start" >
        </Button>
    </RelativeLayout>

</RelativeLayout>
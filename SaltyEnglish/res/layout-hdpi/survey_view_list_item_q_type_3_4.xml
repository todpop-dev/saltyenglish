<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/survey_id_point"
        android:layout_width="13.33dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26.67dp"
        android:layout_marginTop="16.66dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/survey_id_question"
        android:layout_width="217.78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16.66dp"
        android:layout_toRightOf="@id/survey_id_point"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/survey_id_edit_text"
        android:layout_width="217.78dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/survey_id_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8.33dp"
        android:background="@drawable/que_body_inputtext"
        android:gravity="center" />

    <ImageView
        android:id="@+id/survey_id_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/survey_id_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8.33dp" />

    <RadioGroup
        android:id="@+id/survey_id_radioGrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/survey_id_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8.89dp"
        android:layout_marginTop="8.33dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/survey_id_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/survey_drawable_checkbox"
            android:button="@null"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/survey_id_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.16dp"
            android:background="@drawable/survey_drawable_checkbox"
            android:button="@null"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/survey_id_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.16dp"
            android:background="@drawable/survey_drawable_checkbox"
            android:button="@null"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/survey_id_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.16dp"
            android:background="@drawable/survey_drawable_checkbox"
            android:button="@null"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/survey_id_btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.16dp"
            android:background="@drawable/survey_drawable_checkbox"
            android:button="@null"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RadioGroup>

</RelativeLayout>
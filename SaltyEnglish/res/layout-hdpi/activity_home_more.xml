<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern" >

     <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="533dp"
        android:layout_centerInParent="true" >


    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="10.41dp"
        android:src="@drawable/common_bgimg_more" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.33dp"
        android:layout_marginTop="8.74dp"
        android:onClick="onClickBack"
        android:background="@drawable/rg_drawable_btn_back"/>
    
    
   
    
    
    <!-- settings -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172.39dp"
        android:background="@drawable/homemore_drawable_btn_setting"
        android:onClick="showSettingActivity"/>
    <!-- summary -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230.69dp"
        android:background="@drawable/homemore_drawable_btn_notice"
        android:onClick="showNoticeActivity"
        />
    <!-- acount info -->
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="288.99dp"
        android:background="@drawable/homemore_drawable_btn_accountinfo"
        android:onClick="showAccountInfoActivity"/>
     <!-- help -->
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="347.28dp"
        android:background="@drawable/homemore_drawable_btn_help"
        android:onClick="showHelpActivity"/>
     
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55.56dp"
        android:layout_marginTop="128.67dp"
        android:src="@drawable/store_51_image_settingwoman" />
     
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="249.43dp"
        android:src="@drawable/store_51_image_accountcouple" />
    
    
    



     </RelativeLayout>

</RelativeLayout>

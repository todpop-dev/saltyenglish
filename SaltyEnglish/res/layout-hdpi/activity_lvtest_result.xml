        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.44dp"
            android:layout_marginTop="45.39dp"
            android:background="@drawable/lvtest_10_image_blackman" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="463.04dp"
            android:background="@drawable/lvtestresult_drawable_continue_btn"
            android:onClick="showHomeActivity" />





     </RelativeLayout>

</RelativeLayout>
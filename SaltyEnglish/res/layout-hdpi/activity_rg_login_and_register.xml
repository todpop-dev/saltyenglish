<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_3_bg"
    >

     <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="533dp"
        android:layout_centerInParent="true" >



    
    <Button
        android:id="@+id/rgloginandregister_id_register_btn"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="310.64dp"
    	android:background="@drawable/rgloginandregister_drawable_btn_register"
    	android:onClick="showRgRegisterActivity"  />
    
    <Button
        android:id="@+id/rgloginandregister_id_login_btn"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="366.44dp"
    	android:background="@drawable/rgloginandregister_drawable_btn_login"
    	android:onClick="showRgLoginActivity"  />
    




     </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background = "@drawable/common_pop_big"
     >
     
    
    <TextView 
        android:id="@+id/popup_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16.66dp"
        android:textSize="15sp"
        android:textColor="#000000"
        />
        
        
        
    <Button 
        android:id="@+id/popup_id_btn"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:onClick="closePopup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8.33dp"
        android:background="@drawable/popupview_drawable_btn"
        android:layout_below="@id/popup_id_text"
        />
    

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_pinkpattern" 
    android:id="@+id/home_more_acount_info_id_main_email_activity">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="12.5dp"
        android:src="@drawable/common_bgimg_accountinfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="10.5dp"
        android:onClick="onClickBack"
        android:background="@drawable/rg_drawable_btn_back"/>
    
    
    <!-- change PW -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="242.5dp"
        android:onClick="showChangePwActivity"
        android:background="@drawable/homemoreaountinfo_drawable_btn_change_pw"/>
    <!-- logout -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="313dp"
        android:background="@drawable/homemoreaountinfo_drawable_btn_logout"
        android:onClick="logout"/>
    <!-- delete acount-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="383dp"
        android:background="@drawable/homemoreaountinfo_drawable_btn_delete_acount"
        android:onClick="deleteAcount"/>
    
    
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57.5dp"
        android:layout_marginTop="195dp"
        android:src="@drawable/store_59_image_pwman" />
    

</RelativeLayout>
